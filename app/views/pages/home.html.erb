
<div class="banner-home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://media.giphy.com/media/W8krmZSDxPIfm/giphy.gif');">
  <div class="banner-content">
      <%= render 'shared/flashes' %>
    <h1 class = "message" >JOIN A HOUSE PARTY</h1>

  <div class="container" id="home-flats">
    <h2 class="message">Being wasted made simple</h2>

    <div class="wrapper-parties">


      <% @parties.last(3).each do |party| %>
         <div class="card-party">
            <h2 class ="card-party-title"><%=  party.title %></h2>
            <h1 id= "capacity-number"> <%= party.capacity %></h1>
            <h5 class="capacity-spots"> spots remaining</h5>
          <%= link_to "", party_path(party), class:"card-link" %>
            <h5 class ="card-party-music">theme: <strong><%= party.music_type %> </strong> </h5>

         </div>

      <% end %>
    </div>
  </div>
</div>

</div>
